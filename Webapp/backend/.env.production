# Production Environment Configuration for eBay Listing Optimizer
# Copy this file to .env and update values for your production environment

# Application Settings
PROJECT_NAME="eBay Listing Optimizer"
VERSION="2.0.0"
API_V1_STR="/api/v1"
DEBUG=false
TESTING=false

# Security - CHANGE THESE VALUES!
SECRET_KEY="your-super-secure-secret-key-change-this-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REDIS_PASSWORD="your-redis-password-change-this"

# Database
DATABASE_URL="sqlite:///./data/ebay_optimizer.db"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# CORS Origins (update with your domain)
BACKEND_CORS_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# Google Sheets Integration
GOOGLE_SHEETS_CREDENTIALS_PATH="/app/credentials/google-service-account.json"
SPREADSHEET_ID=""
SHEET_NAME="Listings"
ORDERS_SHEET_NAME="Orders"
SOURCES_SHEET_NAME="Sources"

# Optimization Settings
MAX_TITLE_LENGTH=80
MAX_DESCRIPTION_LENGTH=4000
USE_FALLBACK_DATA=false
FALLBACK_DATA_PATH="/app/data/sample_listings.json"

# High Priority Keywords
HIGH_PRIORITY_KEYWORDS="new,sealed,authentic,original,genuine,oem"
MEDIUM_PRIORITY_KEYWORDS="fast shipping,free shipping,warranty,guaranteed"

# Redis Configuration
REDIS_URL="redis://redis:6379/0"
REDIS_HOST="redis"
REDIS_PORT=6379
REDIS_DB=0

# Email Configuration (for notifications)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USERNAME=""
SMTP_PASSWORD=""
EMAIL_FROM="noreply@yourdomain.com"

# Monitoring & Logging
SENTRY_DSN=""
LOG_LEVEL="INFO"
STRUCTURED_LOGGING=true

# Performance Settings
UVICORN_WORKERS=4
UVICORN_MAX_REQUESTS=1000
UVICORN_MAX_REQUESTS_JITTER=50

# Rate Limiting
RATE_LIMIT_API="60/minute"
RATE_LIMIT_AUTH="5/minute"

# File Upload Limits
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES="json,csv,xlsx"

# Cache Settings
CACHE_TTL=300
ENABLE_RESPONSE_CACHE=true

# Development/Testing (set to false in production)
ENABLE_DOCS=false
ENABLE_REDOC=false
ENABLE_DEBUG_TOOLBAR=false

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Health Check Settings
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_INTERVAL=60

# SSL/TLS Settings (if using HTTPS)
SSL_CERT_PATH="/app/ssl/cert.pem"
SSL_KEY_PATH="/app/ssl/key.pem"
FORCE_HTTPS=true